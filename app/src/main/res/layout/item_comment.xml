
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="1dp"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_comment_patientName"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="     王**"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/colorLightGray"/>
        <TextView
            android:id="@+id/tv_comment_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="2020年7月4日"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="@color/colorLightGray"/>
    </LinearLayout>
    <!--确诊疾病-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="     确诊疾病："
            android:textSize="15dp"
            android:textColor="@color/colorLightGray"/>
        <TextView
            android:id="@+id/tv_comment_disease"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="闭塞性血栓性脉管炎"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <!--治疗方式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="     治疗方式："
            android:textSize="15dp"
            android:textColor="@color/colorLightGray"/>
        <TextView
            android:id="@+id/tv_comment_method"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="药物"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <!--本次就诊花费-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="     本次就诊花费："
            android:textSize="15dp"
            android:textColor="@color/colorLightGray"/>
        <TextView
            android:id="@+id/tv_comment_cost"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="250元"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <!--本次治疗效果-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="     本次治疗效果："
            android:textSize="15dp"
            android:textColor="@color/colorLightGray"/>
        <TextView
            android:id="@+id/tv_comment_result"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:text="有效果"
            android:textSize="18dp"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     很好，能详细地解答病人的疑问"
        android:textSize="18dp"
        android:textColor="@color/colorBlack"/>
</LinearLayout>
