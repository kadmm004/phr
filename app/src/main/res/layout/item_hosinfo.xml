
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorWhite">

    <!--医院图片-->
    <ImageView
        android:id="@+id/iv_hospic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/registpage_zhanwei"/>

    <!--医院信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <!--医院名称-->
        <TextView
            android:id="@+id/tv_hosname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海交通大学医学院附属瑞金医院"
            android:textSize="15dp"
            android:textStyle="bold" />
        <!--医院-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <!--医院等级-->
            <TextView
                android:id="@+id/tv_hosclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三级甲等"
                android:textSize="12dp"
                android:textColor="@color/colorRed" />

            <!--医院类型-->
            <TextView
                android:id="@+id/tv_hostype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:text="综合医院" />

        </LinearLayout>

        <!--重点科室-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:text="重点科室 : " />

            <TextView
                android:id="@+id/tv_hosdpmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:text="泌尿外科门诊，神经外科，普外科" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hoscomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorBlue"
            android:textColor="@color/colorLightGray"
            android:textSize="12dp"
            android:text="全国综合患者好评排行第4名" />

    </LinearLayout>
</LinearLayout>

