
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <!--医生图片-->
    <ImageView
        android:id="@+id/iv_docImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/registpage_zhanwei"/>

    <!--医院信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <!--医生姓名-->
            <TextView
                android:id="@+id/tv_docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="doctorName"
                android:textSize="20dp"

                android:textStyle="bold" />
            <!--医生职称-->
            <TextView
                android:id="@+id/tv_docTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="doctorTitle"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--医院-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <!--医生评分-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分："
                android:textSize="12dp"
                android:textColor="@color/colorLightGray" />
            <TextView
                android:id="@+id/tv_docScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="docScore"
                android:textSize="12dp"
                android:textColor="@color/colorLightGray" />
            <!--预约量-->
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约量："
                android:textSize="12dp"
                android:textColor="@color/colorLightGray" />
            <TextView
                android:id="@+id/tv_docNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="docNum"
                android:textSize="12dp"
                android:textColor="@color/colorLightGray" />

        </LinearLayout>

        <!--擅长-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:text="擅长 : " />

            <TextView
                android:id="@+id/tv_docMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/colorLightGray"
                android:textSize="12dp"
                android:text="钙磷代谢，骨质疏松" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
