<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj9">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_appoint"
                android:clickable="true"
                android:layout_width="200dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="#E8F0FE"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_register"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/kuaisuyuyue"
                        android:contentDescription="TODO">
                    </ImageButton>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="70dp"
                        android:src="@drawable/kuaisuyuyue_icon">
                    </ImageView>
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_drug"
                android:clickable="true"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardBackgroundColor="#E8F0FE"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageButton
                        android:id="@+id/btn_inqury"
                        android:layout_width="180dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/chayaopin"
                        android:contentDescription="TODO">
                    </ImageButton>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-40dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/yaoxiang">
                    </ImageView>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        
        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_marginLeft="35dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/adver1"
                android:scaleType="centerCrop">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="健康情报站"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <ListView
            android:id="@+id/lv_healthstation"
            android:layout_width="match_parent"
            android:layout_height="522dp"
            android:background="#95FFFFFF" />

        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_marginLeft="35dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/adver2"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/jiankanghao1"></ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:layout_marginLeft="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jiankanghao2"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="400dp"
            android:layout_height="230dp"
            android:layout_marginLeft="10dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:padding="10dp"
            app:cardElevation="5dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jiankanghao3"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
