<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.MyphrdocActivity"
    android:background="#F8F8F8">

    <LinearLayout
        android:id="@+id/mine_first_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_first"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@drawable/icon_return"
            android:clickable="false"></ImageView>

        <TextView
            android:id="@+id/tv_title_first"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="我的健康档案"
            android:textColor="#000000"
            android:textSize="25dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phrdoc_head"
        android:orientation="horizontal"
        android:background="#7E9DDB">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phrdoc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某某"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp">
            </TextView>
            <TextView
                android:id="@+id/phrdoc_agesex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女 21岁"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_tophrdoc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="健康信息 >"
            android:textSize="20dp"
            android:textColor="#CFDBF5"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="105dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的病历"
            android:textSize="24dp"
            android:textColor="#000000"
            android:layout_margin="10dp">
        </TextView>

        <TextView
            android:id="@+id/tv_tomyills"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的病历"
            android:textSize="20dp"
            android:textColor="#7AABFF"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="180dp">
        </TextView>

    </LinearLayout>

</LinearLayout>